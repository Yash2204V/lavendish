<%- include('./partials/header') %>

<div class="w-full h-screen flex px-20">
    <!-- Signup Form Section -->
    <div class="w-1/2 flex items-center justify-center h-screen">
        <div class="w-full px-32">
            <h4 class="text-2xl capitalize mb-5">Admin Signup</h4>
            <form action="/owners/register" method="post">
                <input class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="text" placeholder="Full Name" name="fullname" required>
                <input class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="email" placeholder="Email" name="email" required>
                <input class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="password" placeholder="Password" name="password" required>
                <input class="px-5 rounded-full py-3 mt-2 bg-blue-500 text-white" type="submit" value="Signup">
            </form>
        </div>
    </div>

    <!-- Login Form Section -->
    <div class="w-1/2 flex items-center justify-center h-screen">
        <div class="w-full px-32">
            <h4 class="text-2xl capitalize mb-5">Admin Login</h4>
            <form action="/owners/login" method="post">
                <input class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="email" placeholder="Email" name="email" required>
                <input class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="password" placeholder="Password" name="password" required>
                <input class="px-5 rounded-full py-3 mt-2 bg-blue-500 text-white" type="submit" value="Login">
            </form>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
